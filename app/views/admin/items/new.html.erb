 <div class="container">

   <h4>商品新規登録</h4>

    <%= form_with model:@item, url: admin_items_path do |f| %>

      <h5>商品画像</h5>
      <%= f.file_field :image,accept: "image/*" %>
      <h5>商品名</h5>
      <%= f.text_field :name %>
      <h5>商品説明</h5>
      <%= f.text_area :introduction %>
      <h5>ジャンル</h5>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
      <h5>税抜価格</h5>
      <%= f.text_field :price %>円
      <h5>販売ステータス</h5>
      <%= f.radio_button :is_active, 'true', checked: true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, 'false' %>
      <%= f.label :is_active, '販売停止中', value: false %></br>
      <%= f.submit"新規登録",class: "btn btn-sm btn-success" %>
<% end %>

 </div>