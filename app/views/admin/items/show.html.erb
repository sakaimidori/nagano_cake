  <div class="container m-3">

      <h4>商品詳細</h4>

      <div class= "row mt-5">
        <div class="col-4">
          <%= image_tag @item.get_item_image(300,200) %>
        </div>

        <div class="col-3">
          <div class= "mt-3">商品名</div>

          <div class= "mt-3">商品説明</div>

          <div class= "mt-3">ジャンル</div>

          <div class= "mt-3">税込価格（税抜価格）</div>

          <div class= "mt-3">販売ステータス</div>
        </div>

        <div class="col-5">
         <div class= "mt-3"><%= @item.name %></div>


          <div class= "mt-3"><%= @item.introduction %></div>


          <div class= "mt-3"><%= @item.genre.name %></div>


         <div class= "mt-3"><%= @item.add_tax_price %>（<%= @item.price %>）円</div>

          <% if @item.is_active == true %>
            <div class= "mt-3">販売中</div>
          <% else %>
           <div class= "mt-3">販売停止中</div>
          <% end %>
        </div>
      </div>

      <div class= "text-center pt-3">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
      </div>


  </div>