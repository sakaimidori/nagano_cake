<div class="container m-3">

  <div class= "row m-2">
    <div class= "col-9">
      <h4>商品一覧</h4>
    </div>

    <div class= "col-3">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-solid fa-plus text-dark"></i>
      <% end %>
    </div>
  </div>


  <table class="table table-borderless m-1 text-center">

      <thead class= "thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>


      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
               <%= item.id %>
            </td>
            <td>
               <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <% if item.is_active == true %>
              <td class= "text-success">販売中</td>
            <% else %>
              <td class= "text-black-50">販売停止中</td>
            <% end %>
          </tr>
        <% end %>



      </tbody>

    </table>

    <div class="text-center">
      <%= paginate @items %>
    </div>
</div>