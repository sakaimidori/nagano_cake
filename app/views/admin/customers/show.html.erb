 <div class="container m-5">

      <h4>
      <%= @customer.last_name %><%= @customer.first_name %> さんの会員詳細
      </h4>

    <div class= "row m-3">
      <div class= "col-3">
        <div class= "mt-3">会員ID</div>

        <div class= "mt-3">氏名</div>

        <div class= "mt-3">フリガナ</div>

        <div class= "mt-3">郵便番号</div>

        <div class= "mt-3">住所</div>

        <div class= "mt-3">電話番号</div>

        <div class= "mt-3">メールアドレス</div>

        <div class= "mt-3">会員ステータス</div>
      </div>

      <div class= "col-9">
        <div class= "mt-3"><%= @customer.id %></div>

        <div class= "mt-3"><%= @customer.last_name %><%= @customer.first_name %></div>

        <div class= "mt-3"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>

        <div class= "mt-3"><%= @customer.postal_code %></div>

        <div class= "mt-3"><%= @customer.address %></div>

        <div class= "mt-3"><%= @customer.telephone_number %></div>

        <div class= "mt-3"><%= @customer.email %></div>

        <div class= "mt-3">
          <% if @customer.is_active == true %>
             有効
          <% else %>
            退会
          <% end %>
        </div>

        <div class= "mt-3">
          <%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %>
        </div>
        <div class= "mt-3">
          <%= link_to "注文履歴一覧を見る",edit_admin_customer_path(@customer), class: "btn btn-sm btn-primary" %>
        </div>
      </div>

    </div>

  </div>