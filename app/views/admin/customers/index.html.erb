<h2>会員一覧</h2>

<% @customers.each do |customer| %>

  <table>

    <thaed>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thaed>

    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.last_name %><%= customer.first_name %></td>
        <td><<%= customer.email %></td>
        <td><%= customer.is_active %></td>
      </tr>
    </tbody>

  </table>

<% end %>

