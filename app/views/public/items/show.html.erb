
<%= image_tag @item.get_item_image(300,300) %>

<h2 class= "item_name">
  <%= @item.name %>
</h2>

<div class= "item_introduction">
  <%= @item.introduction %>
</div>

<h3 class= "item_price">
  ￥<%= @item.add_tax_price %>(税込)
</h3>


<%= form_with model: @cart_item, url:cart_items_path, method: :post do |f| %>

  <%= f.hidden_field :item_id, :value => @item.id %>

  <%= f.select :amount, [['1個',1],['2個',2],['3個',3],['4個',4],['5個',5],['6個',6],['7個',7],['8個',8],['9個',9],['10個',10]], :prompt => "個数選択" %>

  <%= f.submit "カートに入れる" %>

<% end %>