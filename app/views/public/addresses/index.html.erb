
    <div class= "container mt-3">
        <h5>配送先登録/一覧</h5>

        <!--新規登録機能-->
        <%= form_with model: @address do |f| %>

            <div>郵便番号（ハイフンなし）</div>
            <%= f.text_field :postal_code %>

            <div>住所</div>
            <%= f.text_field :address %>

            <div>宛名</div>
            <%= f.text_field :name %>

            <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>

        <% end %>


        <!--一覧機能-->


            <table class = "table table-bordered mt-3">

                <thead>

                    <tr>
                        <th class= "table-secondary">郵便番号</th>
                        <th class= "table-secondary">住所</th>
                        <th class= "table-secondary">宛名</th>
                        <th class= "table-secondary"></th>
                        <th class= "table-secondary"></th>
                    </tr>
                </thead>

                <tbody>
                     <% @addresses.each do |address| %>
                        <tr>
                            <td><%= address.postal_code %></td>
                            <td><%= address.address %></td>
                            <td><%= address.name %></td>
                            <td><%= link_to "編集する", edit_addresses_path(address.id), class: "btn btn-sm btn-success" %></td>
                            <td><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
                        </tr>
                    <% end %>
                </tbody>


            </table>

        </div>

