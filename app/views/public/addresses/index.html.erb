<h2>配送先登録/一覧</h2>

<!--新規登録機能-->
<%= form_with model: @address do |f| %>

    <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :postal_code %>

    <h4>住所</h4>
    <%= f.text_field :address %>

    <h4>宛名</h4>
    <%= f.text_field :name %>

    <%= f.submit "新規登録" %>

<% end %>


<!--一覧機能-->
<% @addresses.each do |address| %>

    <h4>郵便番号</h4>
    <%= address.postal_code %>

    <h4>住所</h4>
    <%= address.address %>

    <h4>宛名</h4>
    <%= address.name %>

<% end %>