<h2>ショッピングカート</h2>

<%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete %>

<table>

  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>

  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url: cart_items_update_path(cart_item), method: :patch do |f| %>
          <%= f.select :amount, cart_item.amount_options, :prompt => "cart_item.amount" %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_items_destroy_path(cart_item), method: :delete %></td>
      <% @total_price += cart_item.subtotal %>
    </tr>
  <% end %>

  </tbody>

</table>

<%= link_to "買い物を続ける", root_path %>

<div>
  合計金額
  <%= @total_price %>
</div>

<%= link_to "情報入力に進む",orders_new_path %>