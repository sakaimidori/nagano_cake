  <div class="container px-5">


          <h4>注文情報入力画面</h4>

          <%= form_with model: @order, url: orders_confirm_path do |f| %>

          <h5>支払い方法</h5>

          <div>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method,  Order.payment_methods_i18n[:credit_card] %>
          </div>

          <div>
             <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
             <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          </div>

          <h5>お届け先</h5>

          <div>
            <%= f.radio_button :select_address, 0  %>
            <%= f.label :select_address,  "ご自身の住所" %>
            〒<%= current_customer.postal_code %><%= current_customer.address %><%= current_customer.last_name %><%= current_customer.first_name %>
          </div>

          <div>
            <%= f.radio_button :select_address, 1  %>
            <%= f.label :select_address, "登録済み住所から選択" %>
            <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
          </div>


            <%= f.radio_button :select_address, 2  %>
            <%= f.label :select_address, "新しいお届け先" %>


          <div>
            <div>郵便番号(ハイフンなし)</div>
            <%= f.text_field :postal_code %>
            <div>住所</div>
            <%= f.text_field :address %>
            <div>宛名</div>
            <%= f.text_field :name %>
          </div>

          <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-primary"  %>

        <% end %>

  </div>




