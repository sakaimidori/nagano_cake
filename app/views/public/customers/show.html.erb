<div class = "container">

  <h3>マイページ</h3>

  <h4>登録情報</h4>
  <%= link_to "編集する", customers_edit_path, class: "btn btn-sm btn-success"  %>

  <table class = "table table-bordered">

    <thead class="table-secondary">
      <th>氏名</th>
      <th>カナ</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
    </thead>

    <tbody>
      <tr>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        <td><%= @customer.postal_code %></td>
        <td><%= @customer.address %></td>
        <td><%= @customer.telephone_number %></td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>



  <h4>配送先</h4>
  <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary"  %>

  <h4>注文履歴</h4>
  <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary"  %>

</div>