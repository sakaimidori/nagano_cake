<h4>会員情報編集</h4>

<%= form_with model:@customer,url: customers_path do |f| %>
    <h5>氏名</h5>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>

    <h5>フリガナ</h5>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>

    <h5>郵便番号</h5>
    <%= f.text_field :postal_code %>

    <h5>住所</h5>
    <%= f.text_field :address %>

    <h5>電話番号</h5>
    <%= f.text_field :telephone_number %>

    <h5>メールアドレス</h5>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></br>

    <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>

    <%= link_to "退会する", customers_confirm_path, class: "btn btn-sm btn-danger" %>


<% end %>
