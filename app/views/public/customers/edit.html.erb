
     <div class= "container pt-3">
        <h5>会員情報編集</h5>

        <%= form_with model:@customer,url: customers_path do |f| %>
            <div>氏名</div>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>

            <div>フリガナ</div>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>

            <div>郵便番号</div>
            <%= f.text_field :postal_code %>

            <div>住所</div>
            <%= f.text_field :address %>

            <div>電話番号</div>
            <%= f.text_field :telephone_number %>

            <div>メールアドレス</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %></br>

            <div class= "mt-3"><%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %></div>

            <div class= "mt-3"><%= link_to "退会する", customers_confirm_path, class: "btn btn-sm btn-danger" %></div>


        <% end %>
    </div>
